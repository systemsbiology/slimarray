<h2>New Chip Return Transaction</h2>

<%= error_messages_for :chip_return %>

<% form_for :chip_return, :url => chip_returns_path do %>
  <p><label for="chip_return_date">Date</label><br/>
  <%= date_select 'chip_return', 'date', :use_month_numbers => true  %></p>
  
  <p><label for="chip_trasaction_from_lab_group_id">Lab Group</label><br/>
  <select id="from_lab_group_id" name="chip_return[from_lab_group_id]">
  <%= options_from_collection_for_select @lab_groups, "id", "name",
  @chip_return.from_lab_group_id %></select></p>

  <p><label for="chip_trasaction_chip_type">Chip Type</label><br/>
  <select id="chip_type_id" name="chip_return[chip_type_id]">
  <%= options_from_collection_for_select @chip_types, "id", "name",
  @chip_return.chip_type_id %></select></p>

  <p><label for="chip_trasaction_to_lab_group_id">Buying From</label><br/>
  <select id="to_lab_group_id" name="chip_return[to_lab_group_id]">
  <%= options_from_collection_for_select @lab_groups, "id", "name",
  @chip_return.to_lab_group_id %></select></p>
  
  <p><label for="chip_trasaction_number">Number of Chips</label><br/>
  <%= text_field 'chip_return', 'number', 'size' => 25  %></p>
  
  <%= submit_tag "Done" %>
<% end -%>

<%= link_to 'Back', :back %>

<h2>New Buying Transaction</h2>

<% form_tag :action => 'create' do -%>
  <p><label for="chip_transaction_date">Date</label><br/>
  <%= date_select 'chip_transaction', 'date', :use_month_numbers => true  %></p>
  
  <p><label for="chip_trasaction_lab_group">Lab Group</label><br/>
  <select id="lab_group_id" name="chip_transaction[lab_group_id]">
  <%= options_from_collection_for_select @lab_groups, "id", "name",
  @chip_transaction.lab_group_id %></select></p>

  <p><label for="chip_trasaction_chip_type">Chip Type</label><br/>
  <select id="chip_type_id" name="chip_transaction[chip_type_id]">
  <%= options_from_collection_for_select @chip_types, "id", "name",
  @chip_transaction.chip_type_id %></select></p>
  
  <p><label for="chip_trasaction_acquired">Number of Chips</label><br/>
  <%= text_field 'chip_transaction', 'acquired', 'size' => 25  %></p>
  
  <p><label for="chip_trasaction_description">Description</label><br/>
  <%= text_field 'chip_transaction', 'description', 'size' => 25  %></p>
  
  <input type="hidden" id="transaction_type" name="transaction_type" value="buy"/>
  
  <%= submit_tag "Done" %>
<% end -%>

<%= link_to 'Back to Listing', :action => 'list_subset' %>

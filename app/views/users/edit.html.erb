<h1>Editing user</h1>

<%= error_messages_for :user %>

<% form_for(@user) do |f| %>
  <p>
    <b>First Name</b><br />
    <%= f.text_field :firstname %>
  </p>

  <p>
    <b>Last Name</b><br />
    <%= f.text_field :lastname %>
  </p>

  <p>
    <b>Login</b><br />
    <%= f.text_field :login %>
  </p>

  <p>
    <b>Role</b><br />
    <%= f.select :role, ["customer", "staff", "admin"] %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>
<h2>Submitted Samples</h2>

<table id="table" class="sortable" cellpadding="0" cellspacing="0" border="0">
  <thead>
    <tr>
      <th><h3>Date</h3></th>
      <th><h3>Sample</h3></th>
      <th><h3>Submitted By</h3></th>
      <th><h3>Project</h3></th>
      <th><h3>Approved?</h3></th>
    </tr>
  </thead>
  <% @samples.each do |sample| %>
    <tr>
      <td><%=h sample.submission_date %></td>
      <td><%=h sample.sample_name %></td>
      <td><%=h sample.sbeams_user %></td>
      <td><%=h sample.project.name %></td>
      <td>
        <input id="sample_approval-<%= sample.id %>" class="sample_approval" type="checkbox"
          value="1" <%= sample.ready_for_processing ? "checked=\"checked\"" : "" %>"
          style="display: inline" />
        <div id="sample_approval-<%= sample.id %>-loading" style="display:none">
          <%= image_tag("/images/ajax-loader.gif") %>
        </div>
      </td>
    </tr>
  <% end %>
</table>

<%= render :partial => 'shared/tinytable', :locals => {:sort_column => 0} %>

<h3>Step 2</h3>

<% form_for :hybridization_set, @hybridization_set, :url => hybridization_sets_path,
   :html => {:method => :post} do |f| %>
  <%= f.error_messages %>

  <%= f.hidden_field :date %>
  <%= f.hidden_field :platform_id %>
  <%= hidden_field_tag "hybridization_set[previous_step]", "step2_no_multi_arrays" %>

  <p>
    <%= f.label :number_of_chips, "Number of Chips/Slides" %><br />
    <%= f.text_field :number_of_chips %>
  </p>
  <% if @hybridization_set.multiple_labels %>
    <p>
      <%= f.label :number_of_channels, "Number of channels (e.g. 2 for Cy3 + Cy5)" %><br />
      <%= f.text_field :number_of_channels %>
    </p>
  <% else %>
    <%= f.hidden_field :number_of_channels, :value => "1" %>
  <% end %>
  <p>
    <%= f.submit "Next" %>
  </p>
<% end %>
